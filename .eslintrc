{
  "ecmaFeatures": {
    'arrowFunctions': true,
    'destructuring': true,
    'classes': true,
    'defaultParams': true,
    'blockBindings': true,
    'modules': true,
    'objectLiteralComputedProperties': true,
    'objectLiteralShorthandMethods': true,
    'objectLiteralShorthandProperties': true,
    'restParams': true,
    'spread': true,
    'forOf': false,
    'generators': false,
    'templateStrings': true,
    'superInFunctions': true,
    'experimentalObjectRestSpread': true
  },

  "plugin": ['html'],

  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },

  "rules": {
    "strict": 0,
    "quotes": [2, "single"],
    "semi": [2, "always"],
    "no-console": 0
  }
}
